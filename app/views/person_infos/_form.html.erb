
<%= simple_form_for@person_info , :html => { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cnic %>
    <%= f.input :age %>
     <%= f.input :gender, as: :radio_buttons, collection: [['0', 'female'], ['1', 'male']], label_method: :second, value_method: :first %>
    <%= f.input :address %>
    <%= f.input :mobile %>
    <%= f.input :apply_for %>
    <%= f.input :area %>
    <%= f.input :detail_area_research %>
    <%= f.input :person_experiences, collection: ['Designed interview questions ','Conducted qualitative interviews','Analysed qualitative interviews','Reported qualitative research','Published qualitative research'],as: :check_boxes ,:checked => @person_experiences.present? ? @person_experiences.pluck(:experience_name) : []
%>
 
    <%= f.input :cv_upload,as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
